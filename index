
<!DOCTYPE html>
<html lang="ja">
<head>
  <meta charset="UTF-8" />
  <title>『マンガ円了』第1話 (Flipbook)</title>
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  <style>
    body {
      margin: 0;
      background: #111;
      color: white;
      font-family: sans-serif;
      text-align: center;
    }
    h1 {
      padding: 20px;
    }
    #flipbook {
      width: 90%;
      height: 80vh;
      margin: 0 auto;
    }
    #flipbook .page {
      width: 100%;
      height: 100%;
    }
    #flipbook .page img {
      width: 100%;
      height: 100%;
      object-fit: contain;
    }
  </style>
  <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/@stpageflip/stpageflip@2.0.5/dist/css/stpageflip.min.css">
</head>
<body>
  <h1>『マンガ円了』第1話</h1>
  <div id="flipbook"></div>

  <script src="https://cdn.jsdelivr.net/npm/@stpageflip/stpageflip@2.0.5/dist/js/stpageflip.min.js"></script>
  <script>
    const flipbook = document.getElementById("flipbook");

    const pageFlip = new St.PageFlip(flipbook, {
      width: 800,
      height: 600,
      size: "stretch",
      minWidth: 315,
      minHeight: 400,
      maxWidth: 1000,
      maxHeight: 1536,
      maxShadowOpacity: 0.5,
      showCover: false,
      mobileScrollSupport: false
    });

    const pages = [];
    for (let i = 5; i <= 33; i++) {
      const img = document.createElement("img");
      img.src = `images/page_${String(i).padStart(3, "0")}.jpg`;
      img.alt = `Page ${i}`;

      const wrapper = document.createElement("div");
      wrapper.classList.add("page");
      wrapper.appendChild(img);

      pages.push(wrapper);
    }

    pageFlip.loadFromHTML(pages);
  </script>
</body>
</html>
